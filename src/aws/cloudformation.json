{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "tablethermostats": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "linkedUserId",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "userId",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "userId",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "5",
                    "WriteCapacityUnits": "5"
                },
                "GlobalSecondaryIndexes": [
                    {
                        "IndexName": "linkedUserId-index",
                        "KeySchema": [
                            {
                                "AttributeName": "linkedUserId",
                                "KeyType": "HASH"
                            }
                        ],
                        "Projection": {
                            "ProjectionType": "ALL"
                        },
                        "ProvisionedThroughput": {
                            "ReadCapacityUnits": "1",
                            "WriteCapacityUnits": "1"
                        }
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "0ecbe475-d7e0-4609-a2ee-ccbec315eebc"
                }
            }
        },
        "topicDeferSetTemperature": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "DisplayName": "Defer Set Temperature",
                "Subscription": [
                    {
                        "Endpoint": {
                            "Fn::Sub": "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function:SmartHeat"
                        },
                        "Protocol": "lambda"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "6f79a9e1-51c7-4253-903b-f0a619b5651c"
                }
            }
        },
