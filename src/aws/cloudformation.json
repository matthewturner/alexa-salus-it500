                                "SNS:Receive",
                                "SNS:AddPermission",
                                "SNS:Subscribe"
                            ],
                            "Resource": {
                                "Ref": "topicDeferSetTemperature"
                            },
                            "Condition": {
                                "StringEquals": {
                                    "AWS:SourceOwner": {
                                        "Fn::Sub": "${AWS::AccountId"
                                    }
                                }
                            }
                        }
                    ]
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "4d69c41f-8f64-4447-b213-6cf56383f775"
                }
            }
        },
